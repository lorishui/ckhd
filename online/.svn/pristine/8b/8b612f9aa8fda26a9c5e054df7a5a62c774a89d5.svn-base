<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ckhd.opengame.app.dao.APPCkDao">
    <sql id="APPCkColumns">
    	a.id,
    	a.ckapp_id,
    	a.child_id,
		a.name,
		a.cpid,
		a.cpname,
		a.discount,
		a.payCallbackUrl,
		a.secretKey,
		a.create_by AS "createBy.id",
		a.create_date,
		a.update_by AS "updateBy.id",
		a.update_date,
		a.del_flag,
		a.remarks
		
    </sql>
    
    <sql id="APPCkJoins">
        <!-- -->
    </sql>
	
	<!-- 根据id获得APP -->
	<select id="get" resultType="APPCk">
		SELECT
			<include refid="APPCkColumns"/> 
		FROM app_ck a
		WHERE a.id = #{id}
	</select>
	

	
	<!-- 根据名称查询APP -->
	<select id="getByName" resultType="APPCk" parameterType="APPCk">
		SELECT
			<include refid="APPCkColumns"/> 
		FROM  app_ck a
		WHERE a.name = #{name} AND a.del_flag = #{DEL_FLAG_NORMAL}
	</select>
	
	
	<!-- 根据ckapp_id查询APP -->
	<select id="getByAppId" resultType="APPCk" parameterType="APPCk">
		SELECT
			<include refid="APPCkColumns"/> 
		FROM  app_ck a
		WHERE a.ckapp_id = #{ckappId} AND a.del_flag = #{DEL_FLAG_NORMAL}
	</select>
	
	<!-- 分页查询APP信息 -->
	<select id="findList" resultType="APPCk">
		SELECT
			<include refid="APPCkColumns"/>
		FROM  app_ck a
		WHERE a.del_flag = #{DEL_FLAG_NORMAL}
		<if test="ckappId != null and ckappId != ''">
			AND a.ckapp_id like CONCAT('%', #{ckappId}, '%')
		</if>
		<if test="name != null and name != ''">
			AND a.name like CONCAT('%', #{name}, '%')
		</if>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.name
			</otherwise>
		</choose>
	</select>
	
	 
	
	<!-- 查询全部APP -->
	<select id="findAllList" resultType="APPCk">
		SELECT
			<include refid="APPCkColumns"/>
		FROM  app_ck a
		WHERE a.del_flag = #{DEL_FLAG_NORMAL} 
		order by a.ckapp_id
	</select>
	
	<!-- 查询全部APP数目 -->
	<select id="findAllCount" resultType="long">
		SELECT
			COUNT(1)
		FROM  app_ck a
		WHERE a.del_flag = #{DEL_FLAG_NORMAL}
	</select>
	
	<!-- 插入APP -->
	<insert id="insert">
		INSERT INTO app_ck(
			id, 
			ckapp_id,
			child_id,
			name, 
			cpid,
			cpname,
			discount,
			payCallbackUrl,
			secretKey,
			create_by,
			create_date,
			update_by,
			update_date,
			remarks, 
			del_flag
		) VALUES (
			#{id}, 
			#{ckappId}, 
			#{childId},
			#{name}, 
			#{cpid}, 
			#{cpname},
			#{discount},
			#{payCallbackUrl},
			#{secretKey},
			#{createBy.id}, 
			#{createDate}, 
			#{updateBy.id}, 
			#{updateDate}, 
			#{remarks}, 
			#{delFlag}
		)
	</insert>
	<!-- 更新APP信息  -->
	<update id="update">
		UPDATE  app_ck SET 
			name = #{name}, 
			cpid = #{cpid},
			cpname = #{cpname},
			discount=#{discount},
			payCallbackUrl=#{payCallbackUrl},
			secretKey=#{secretKey},
			update_by = #{updateBy.id}, 
			update_date = #{updateDate}, 
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
	<!-- 逻辑删除APP -->
	<update id="delete">
		UPDATE  app_ck SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	  <!-- 根据ckapp_id查询name -->
	<select id="getCkAppName" resultType="java.lang.String">
		SELECT a.name
		FROM app_ck a
		WHERE  a.ckapp_id = #{ckappId}
	</select>
	
	 <!-- 根据ckapp_id查询name -->
	<select id="getCkAppNameByChild" resultType="java.lang.String">
		SELECT a.name
		FROM app_ck a
		WHERE  a.ckapp_id = #{ckappId} and  a.child_Id = #{childCkAppId}
	</select>
	
	 <!-- 根据ckapp_id查询name -->
	<select id="getChildIdList" resultType="java.util.Map">
		SELECT a.name,a.child_Id as childId
		FROM app_ck a
		WHERE  a.ckapp_id = #{ckappId}
	</select>
</mapper>