<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ckhd.opengame.online.dao.RoleDao">

	<!-- 插入用户 -->
	<insert id="insert">
		REPLACE INTO sdk_user_role(
			ckAppId,
			ckChannelId,
			uuid,
			userId,
			roleId,
			roleName,
			roleNameResource,
			serverId,
			serverName,
			roleLevel,
			childCkAppId,
			childChannelId,
			zoneId,
			createDate
		) VALUES (
			#{ckAppId},
			#{ckChannelId},
			#{uuid},
			#{userId},
			#{roleId},
			#{roleName},
			#{roleNameResource},
			#{serverId},
			#{serverName},
			#{roleLevel},
			#{childCkAppId},
			#{childChannelId},
			#{zoneId},
			#{createDate}
		)
	</insert>
	
	<!-- 更新用户 -->
	<update id="update">
		UPDATE sdk_user_role SET  roleId=#{roleId}
		<if test="roleName != null and roleName != ''">
			,roleName = #{roleName}
		</if>
		<if test="roleLevel != null and roleLevel != '' ">
			,roleLevel = #{roleLevel}
		</if>
		<if test="updateDate != null and updateDate != ''">
			,updateDate = #{updateDate}
		</if>
		<if test="uuid != null and uuid != ''">
			,uuid = #{uuid}
		</if>
		WHERE roleId = #{roleId} and ckAppId=#{ckAppId} and serverId=#{serverId} and zoneId=#{zoneId}
	</update>
	
	<select id="isExist" resultType="Integer">
		SELECT COUNT(0) num FROM sdk_user_role WHERE ckAppId=#{ckAppId} AND roleId=#{roleId} AND serverId=#{serverId} and zoneId=#{zoneId}
	</select>
	
	<insert id="insertEvent">
		INSERT INTO event_user_role(
			ckAppId,
			ckChannelId,
			uuid,
			userId,
			roleId,
			roleName,
			serverId,
			serverName,
			roleLevel,
			childCkAppId,
			childChannelId,
			zoneId,
			type,
			createDate
		) VALUES (
			#{ckAppId},
			#{ckChannelId},
			#{uuid},
			#{userId},
			#{roleId},
			#{roleName},
			#{serverId},
			#{serverName},
			#{roleLevel},
			#{childCkAppId},
			#{childChannelId},
			#{zoneId},
			#{type},
			#{createDate}
		)
	</insert>
</mapper>