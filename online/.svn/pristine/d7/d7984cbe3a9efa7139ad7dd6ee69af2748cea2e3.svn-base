package online;

import java.io.File;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

public class UpdateCompared {
	public static List<String> list = new ArrayList<String>();
	
	public static void main(String[] args) {
		String url = "D:\\work\\.metadata\\.plugins\\org.eclipse.wst.server.core\\tmp1\\wtpwebapps\\online";
		File file = new File(url);
		compareDate(file, new Date());
		for(int i=0;i<list.size();i++){
			System.out.println(list.get(i));
		}
	}

	
	public static void compareDate(File file,Date date){
		if(file.exists()){
			if(file.isDirectory()){
				File[] arr = file.listFiles();
				for(File f:arr){
					compareDate(f, date);
				}
			}else if(file.isFile()){
//				System.out.println(file.getPath());
				long n = file.lastModified();
				if( date.getTime()-n <= 4*24*60*60*1000 ){
					list.add(file.getPath());
				}
			}
		}
	}
	
	
}
