<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ckhd.opengame.app.dao.AppPayListDao">
    <insert id="insert">
    	INSERT INTO app_pay_list(
			id,
			ckAppId,
			childCkAppId,
			ckChannelId,
			versionName,
			mmappid,
			payType,
			area,
			timeframe,
			isUse,
			create_date,
			create_by
		) VALUES (
			#{id},
			#{ckAppId},
			#{childCkAppId},
			#{ckChannelId},
			#{versionName},
			#{mmappid},
			#{payType},
			#{area},
			#{timeframe},
			#{isUse},
			#{createDate},
			#{createBy.id}
		)
    </insert>
    
    <select id="findList" resultType="AppPayList">
    	SELECT 
    		id,
			ckAppId,
			childCkAppId,
			ckChannelId,
			versionName,
			mmappid,
			payType,
			area,
			timeframe,
			isUse,
			create_date as createDate,
			create_by as createBy
    	 FROM app_pay_list a 
    	WHERE 1=1
    	<if test="ckAppId != null and ckAppId != ''">
    		and a.ckAppId = #{ckAppId}
    	</if> 
    	<if test="ckChannelId != null and ckChannelId != ''">
    		and a.ckChannelId = #{ckChannelId}
    	</if>
    </select>
     
    <select id="get" resultType="AppPayList">
    	SELECT 
    		id,
			ckAppId,
			childCkAppId,
			ckChannelId,
			versionName,
			mmappid,
			payType,
			area,
			timeframe,
			isUse,
			create_date as createDate,
			create_by as createBy
    	 FROM app_pay_list a 
    	WHERE id = #{id}
    </select>
    
    <update id="update">
    	UPDATE app_pay_list SET
    	 payType = #{payType},
    	 ckChannelId =#{ckChannelId},
    	 payType =#{payType},
    	 isUse =#{isUse}
		WHERE id=#{id}
    </update>
    
     <select id="findOne" resultType="java.util.Map">
    	SELECT 
			ckAppId,
			childCkAppId,
			ckChannelId,
			versionName,
			mmappid,
			payType,
			area
		FROM app_pay_list a 
    	WHERE a.ckAppId = #{ckAppId}
    	and (FIND_IN_SET(#{ckChannelId},a.ckChannelId) or a.ckChannelId='#')
    	and a.isUse = 1
    	ORDER BY a.create_date desc LIMIT 1
    </select>
    
    <!-- 逻辑删除APP -->
	<update id="delete">
		UPDATE  app_ck SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
</mapper>