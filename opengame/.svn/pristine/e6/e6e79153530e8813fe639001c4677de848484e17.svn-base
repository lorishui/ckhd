<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ckhd.opengame.game.dao.UpdateVersionDao">
 
	<insert id="insert">
		INSERT INTO t_update_version(
			ckAppId,
			ckChannelId,
			versionName,
			<!-- provice, -->
			size,
			path,
			fileName,
			url,
			type,
			isUse,
			createTime
		) VALUES (
			#{ckAppId},
			#{ckChannelId},
			#{versionName},
			<!-- #{provice}, -->
			#{size},
			#{path},
			#{fileName},
			#{url},
			#{type},
			#{isUse},
			#{createDate}
		)
	</insert>
	
	<select id="findList" resultType="UpdateVersion">
		SELECT * 
		FROM `t_update_version`
		where 1=1
		<if test="ckAppId != null and ckAppId != ''">
			and ckAppId=#{ckAppId}
		</if> 
		<if test="ckChannelId != null and ckChannelId != ''">
			and ckChannelId=#{ckChannelId}
		</if> 
		<if test="versionName != null and versionName != ''">
			and versionName=#{versionName}
		</if> 
		<if test="type != null and type != ''">
			and type=#{type}
		</if> 
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY id
			</otherwise>
		</choose>
	</select>
	
	<select id="get" resultType="UpdateVersion">
		SELECT *
		FROM t_update_version a
		WHERE a.id = #{id}
	</select>
	
	<update id="update">
		UPDATE	t_update_version SET 
			ckChannelId=#{ckChannelId},
			versionName=#{versionName},
			path=#{path},
			fileName=#{fileName},
			size=#{size},
			isUse=#{isUse}
		WHERE id = #{id}
	</update>
</mapper>